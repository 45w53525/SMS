<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SMS</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Bootstrap/js/bootstrap.js"></script>
    <script src="~/Bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body class="bg-light">
    <div class="navbar navbar-inverse navbar-fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <div class="row">
                    <h1 style="color:white;">SCHOOL MANAGEMENT SYSTEM</h1>

                </div>
            </div>

            <div class="navbar">
                <ul class="nav ">

                    <li><a href="@Url.Action("Register","Account")">Registration</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                <li style="color:white;">Hi! @User.Identity.Name</li>
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                <li><a href="@Url.Action("Login","Account")">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="bg-dark">
            <p class="text-white"> &copy; @DateTime.Now.Year - Developed By - Rohit Sharma</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>